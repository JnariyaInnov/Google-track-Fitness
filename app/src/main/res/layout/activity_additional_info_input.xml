<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blogspot.athletio.AdditionalInfoInputActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="BirthDate"
        android:textSize="15dp"
        android:layout_weight="1"
        android:id="@+id/AditionalInputbirthtext"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/AditionalInputspinner_layout01"
        android:layout_below="@+id/AditionalInputbirthtext"
        android:layout_alignLeft="@+id/AditionalInputspinner_layout02"
        android:layout_alignStart="@+id/AditionalInputspinner_layout02"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year"
            android:textSize="10dp"
            android:id="@+id/AditionalInputbirthyear"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/AditionalInputyearSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:textSize="10dp">

        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Month"
            android:textSize="10dp"
            android:id="@+id/AditionalInputbirthmonth"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/AditionalInputmonthSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:textSize="10dp">

        </Spinner>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day"
            android:textSize="10dp"
            android:id="@+id/AditionalInputbirthdate"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/AditionalInputdaySpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textAlignment="center"
            android:textSize="10dp">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AditionalInputspinner_layout02"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/AditionalInputspinner_layout01"
        android:layout_alignLeft="@+id/AditionalInputweight"
        android:layout_alignStart="@+id/AditionalInputweight">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:id="@+id/AditionalInputgender"
            android:textSize="10dp"
            android:layout_weight="1"/>
        <Spinner
            android:id="@+id/AditionalInputgenderSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_weight="2"
            android:textSize="10dp">
        </Spinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>

    <EditText
        android:id="@+id/AditionalInputheight"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:hint="Your Current Height(cm)"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/AditionalInputspinner_layout02"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AditionalInputweight"
        android:hint="Your Current Weight(kg)"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/AditionalInputheight"
        android:layout_alignParentLeft="true"
        android:textSize="15dp"
        android:textAlignment="center"
        android:layout_alignParentStart="true" />
    <Button
        android:id="@+id/AditionalInputbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textSize="20dp"
        android:layout_below="@+id/AditionalInputweight"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp" />

</RelativeLayout>
