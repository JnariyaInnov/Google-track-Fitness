<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blogspot.athletio.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mainStatTableLayout"
            android:orientation="vertical"
            >
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:text="Statistics"
                        android:textSize="30dp"
                        android:textColor="#2ca823"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textAlignment="center"
                        android:id="@+id/mainStat"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:orientation="vertical">
                    <TextView
                        android:text="Step Count"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Calories Burned"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="2140"
                        android:textSize="30dp"
                        android:id="@+id/mainsteps"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="2130"
                        android:textAlignment="center"
                        android:id="@+id/maincalorie"
                        android:textSize="30dp"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="2140 steps to reach goal "
                        android:textSize="10dp"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Status: Moderate"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mainStatTableLayout"
            android:id="@+id/mainRankTableLayout">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainRank"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textAlignment="center"
                        android:textColor="#2ca823"
                        android:textSize="30dp"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainListName1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tanvir"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mainListStepCount1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4432"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainListName2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Mashrur"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mainListStepCount2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="3321"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainListName3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kashob"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mainListStepCount3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2276"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainListName4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mainListStepCount4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="890"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/mainListName5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bob"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/mainListStepCount5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="230"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Be More Active"
                android:textAlignment="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
