<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.blogspot.athletio.MainActivity"
    android:background="@color/dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_layout_stat_table_layout"
            android:orientation="vertical"
            >
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp"
                    >

                    <TextView
                        android:text="Statistics"
                        android:textSize="30dp"
                        android:textColor="#2ca823"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow
                    android:orientation="vertical">
                    <TextView
                        android:text="Step Count"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Calories Burned"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="2140"
                        android:textSize="30dp"
                        android:id="@+id/main_layout_steps_textview"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="2130"
                        android:textAlignment="center"
                        android:id="@+id/main_layout_callorie_textview"
                        android:textSize="30dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="2140 steps to reach goal "
                        android:textSize="10dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />

                    <TextView
                        android:text="Status: Moderate"
                        android:textAlignment="center"
                        android:textSize="15dp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_weight="1" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_layout_stat_table_layout"
            android:id="@+id/mainRankTableLayout">

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Rank"
                        android:textAlignment="center"
                        android:textColor="#2ca823"
                        android:textSize="30dp"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="Steps"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/main_layout_rank_name1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Tanvir"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/main_layout_rank_steps1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="4432"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow

                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/main_layout_rank_name2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Mashrur"
                        android:textColor="@color/white"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/main_layout_rank_steps2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="3321"
                        android:textColor="@color/white"
                        android:layout_weight="1" />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/main_layout_rank_name3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Kashob"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/main_layout_rank_steps3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2276"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/main_layout_rank_name4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="John"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/main_layout_rank_steps4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="890"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/main_layout_rank_name5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Bob"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/main_layout_rank_steps5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="230"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_weight="1" />

                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Be More Active"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
